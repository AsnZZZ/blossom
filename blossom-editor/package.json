{
  "name": "blossom",
  "productName": "Blossom",
  "version": "1.12.0",
  "description": "A markdown editor",
  "license": "MIT",
  "main": "./out/main/index.js",
  "author": "xzzz",
  "homepage": "https://github.com/blossom-editor/blossom",
  "keywords": [
    "markdown",
    "editor"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "chcp 65001 && electron-vite dev --watch",
    "dev:mac": "electron-vite dev --watch",
    "dev:tryuse": "chcp 65001 && electron-vite dev --watch --mode=tryuse",
    "build": "npm run typecheck && electron-vite build",
    "build:tryuse": "npm run typecheck && electron-vite build --mode=tryuse",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config ",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.0",
    "@codemirror/language-data": "^6.3.1",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2",
    "@types/marked": "^5.0.1",
    "axios": "^1.4.0",
    "codemirror": "^6.0.1",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.4.4",
    "highlight.js": "^11.8.0",
    "hotkeys-js": "^3.12.0",
    "katex": "^0.16.8",
    "marked": "^7.0.5",
    "marked-highlight": "^2.0.4",
    "marked-katex-extension": "^4.0.5",
    "markmap-lib": "^0.15.4",
    "markmap-view": "^0.15.4",
    "mermaid": "^10.4.0",
    "pinia": "^2.1.6",
    "prettier": "^3.0.2",
    "sass": "^1.66.1",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.4",
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/node": "^18.17.8",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "electron": "^24.8.0",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-vue": "^9.17.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.5.1",
    "vue": "^3.4.5",
    "vue-tsc": "^1.8.27"
  }
}